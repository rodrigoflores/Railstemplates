#search_box.rounded-all
  = form_tag search_path, :method => :get do
    = text_field_tag :q, nil, :placeholder=>'search for templates...'
    = submit_tag "search", :class => "search-button", :title => "Search"

.break
- if githubber_signed_in?
  = render :partial => 'shared/current_githubber', :locals => { :githubber => current_githubber }
- else
  %ul#menu
    %li= link_to "All templates", templates_path, :class => "sign-in rounded-all"
    %li= link_to "Learn more", learn_path, :class => "sign-in rounded-all"
  #current_githubber
    = link_to "Sign in using Github", githubber_oauth_authorize_url(:github), :title => "Sign in using Github", :class => "sign-in rounded-all"