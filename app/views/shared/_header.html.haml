#search_box
  = form_tag "/search", :method => :get do
    = text_field_tag(:search, nil, :placeholder=>'Search')
    = submit_tag "search", :class => "search-button", :title => "Search"

.break
- if githubber_signed_in?
  = render :partial => 'shared/current_githubber', :locals => { :githubber => current_githubber }
- else
  %ul#menu
    %li= link_to "All Templates", all_templates_path
  #current_githubber
    = link_to "Sign in using Github", githubber_oauth_authorize_url(:github), :title => "Sign in using Github", :class => "sign-in"