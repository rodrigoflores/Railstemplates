%h1
  =link_to @template.title, download_url(@template)

#stats
  #likes
    = pluralize_with_html @template.likes.count, "Like"
  #downloads
  = pluralize_with_html @template.download_counter, "Download"
  = pluralize_with_html @template.works, "Work"

  = link_to 'Like', template_likes_path(@template), :method => :put, :id => 'like_button', :remote => true
  = link_to 'work', template_works_path(@template, :work => true), :method => :put, :id => 'work_button', :remote => true
  = link_to "don't work", template_works_path(@template, :work => false), :method => :put, :id => 'work_button', :remote => true

%p
  %strong Download Link
  = link_to download_url(@template), download_url
  = clippy download_url(@template)

= @template.description

%p= @template.tag_list


#sample{:'data-url' => @template.gist_file}
  %h2 Sample
  / = simple_format(@template.sample.gsub(" ","&nbsp;"))